<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/lover_tom_card"
        android:layout_width="0dp"
        android:layout_height="219dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/card_shape"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/lover_tom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-16dp"
        android:contentDescription=""
        android:src="@drawable/lover_tom"
        app:layout_constraintEnd_toEndOf="@+id/lover_tom_card"
        app:layout_constraintStart_toStartOf="@id/lover_tom_card"
        app:layout_constraintTop_toTopOf="@id/lover_tom_card" />

    <TextView
        android:id="@+id/lover_tom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ibm_plex_sans_arabic_semi_bold"
        android:text="Tom the lover"
        android:textColor="@color/textDark"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/lover_tom_card"
        app:layout_constraintStart_toStartOf="@id/lover_tom_card"
        app:layout_constraintTop_toBottomOf="@id/lover_tom" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ibm_plex_sans_arabic_regular"
        android:text="He loves one-sidedly... and is beaten by the other side."
        android:textColor="@color/textThin"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="@+id/lover_tom_card"
        app:layout_constraintStart_toStartOf="@id/lover_tom_card"
        app:layout_constraintTop_toBottomOf="@id/lover_tom_title" />

    <View
        android:id="@+id/lover_price_outline"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/price_box_shape"
        app:layout_constraintEnd_toStartOf="@id/lover_cart_outline"
        app:layout_constraintStart_toStartOf="@id/lover_tom_card"
        app:layout_constraintBottom_toBottomOf="@id/lover_tom_card"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/lover_price_outline"
        app:layout_constraintBottom_toBottomOf="@id/lover_price_outline"
        app:layout_constraintStart_toStartOf="@id/lover_price_outline"
        app:layout_constraintEnd_toEndOf="@id/lover_price_outline">

        <ImageView
            android:id="@+id/lover_price"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription=""
            android:src="@drawable/price"
            android:layout_marginEnd="4dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 cheeses"
            android:textColor="@color/brand"
            android:fontFamily="@font/ibm_plex_sans_arabic_medium"
            android:textSize="12sp" />

    </LinearLayout>

    <View
        android:id="@+id/lover_cart_outline"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/cart_shape"
        app:layout_constraintTop_toTopOf="@+id/lover_price_outline"
        app:layout_constraintEnd_toEndOf="@id/lover_tom_card"/>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:contentDescription=""
        android:src="@drawable/cart"
        app:layout_constraintTop_toTopOf="@id/lover_cart_outline"
        app:layout_constraintBottom_toBottomOf="@id/lover_cart_outline"
        app:layout_constraintStart_toStartOf="@id/lover_cart_outline"
        app:layout_constraintEnd_toEndOf="@id/lover_cart_outline"/>

</androidx.constraintlayout.widget.ConstraintLayout>